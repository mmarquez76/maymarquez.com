{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
  {{ content | safe }}
{% endset %}

{# Post list content #}
{% set postListHeading = projectsHeading %}
{% set postListItems = collections.projectFeed %}

{# Projects link #}
{% if postListItems.length < collections.projects.length %} 
  {% set paginationNextText = projectsButtonText %}
  {% set paginationNextUrl = '/projects' %}
{% endif %}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    {% include "partials/components/post-list.njk" %}
    {% include "partials/components/pagination.njk" %}
  </main>
{% endblock %}
